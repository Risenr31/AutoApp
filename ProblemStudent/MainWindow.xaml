<Window x:Class="ProblemStudent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProblemStudent"
        mc:Ignorable="d"
        Title="Успеваемость студентов" Height="600" Width="1300">
    <Grid Margin="0,0,-6.4,-0.6">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="337" Margin="38,105,0,0" VerticalAlignment="Top" Width="290"/>
        <ListView x:Name ="PrSt" HorizontalAlignment="Left" Height="337" VerticalAlignment="Top" Width="312" Margin="943,105,0,0"/>
        <Label Content="Проблемные студенты" HorizontalAlignment="Left" Height="30" Margin="943,70,0,0" VerticalAlignment="Top" Width="145"/>
        <Button x:Name ="ShowAll" Content="Показать" HorizontalAlignment="Left" Height="35" Margin="504,442,0,0" VerticalAlignment="Top" Width="145" Click="Button_Click"/>
        <Calendar HorizontalAlignment="Left" Height="180" Margin="692,105,0,0" VerticalAlignment="Top" Width="198"/>
        <Button x:Name="Transfer" Content="Отправить в деканат" HorizontalAlignment="Left" Height="35" Margin="1110,441,0,0" VerticalAlignment="Top" Width="145" Click="Transfer_Click"/>
        <ListView x:Name ="AllStudent" HorizontalAlignment="Left" Height="337" Margin="355,105,0,0" VerticalAlignment="Top" Width="294"/>
        <Label Content="Студенты" HorizontalAlignment="Left" Margin="355,70,0,0" VerticalAlignment="Top" Height="30" Width="65"/>
        <Button x:Name ="MakeO" Content="Составить отчёт" HorizontalAlignment="Left" Height="35" Margin="718,290,0,0" VerticalAlignment="Top" Width="145" Click="MakeO_Click"/>
        <TextBox Name="StGr" HorizontalAlignment="Left" Height="23" Margin="170,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="StOc" HorizontalAlignment="Left" Height="23" Margin="170,244,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="StPo" HorizontalAlignment="Left" Height="23" Margin="170,359,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Добавление студента" HorizontalAlignment="Left" Margin="38,70,0,0" VerticalAlignment="Top" Width="130" Height="30"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="183,441,0,0" VerticalAlignment="Top" Width="145" Height="35" Click="Button_Click_1"/>
        <Label Content="Группа" HorizontalAlignment="Left" Margin="60,158,0,0" VerticalAlignment="Top"/>
        <Label Content="Оценки" HorizontalAlignment="Left" Margin="60,241,0,0" VerticalAlignment="Top"/>
        <Label Content="Посещаемость" HorizontalAlignment="Left" Margin="60,356,0,0" VerticalAlignment="Top"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="60,127,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="StName"  HorizontalAlignment="Left" Height="23" Margin="170,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Вводить списком, разделяя пробелом" HorizontalAlignment="Left" Margin="60,272,0,0" VerticalAlignment="Top" Height="30" Width="230"/>
        <Label Content="Вводить списком слитно + и -" HorizontalAlignment="Left" Margin="60,387,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
